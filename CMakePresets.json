{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 13,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "common",
      "hidden": true,
      "binaryDir": "${sourceDir}/build/${presetName}",
      "installDir": "${sourceDir}/build/${presetName}",
      "warnings": {
        "unusedCli": false
      }
    },
    {
      "name": "msvc",
      "hidden": true,
      "inherits": "common",
      "generator": "Visual Studio 17 2022",
      "architecture": {
        "value": "x64",
        "strategy": "set"
      },
      "toolset": {
        "value": "host=x64",
        "strategy": "set"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "vendor": {
        "jetbrains.com/clion": {
          "toolchain": "Visual Studio"
        },
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "intelliSenseMode": "windows-msvc-x64"
        }
      }
    },
    {
      "name": "mingw",
      "hidden": true,
      "inherits": "common",
      "generator": "Ninja",
      "cacheVariables": {
        "BUILD_CUDA_SUPPORT": false
      },
      "vendor": {
        "jetbrains.com/clion": {
          "toolchain": "MinGW"
        },
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "intelliSenseMode": "linux-gcc-x64"
        }
      }
    },
    {
      "name": "msvc-debug",
      "displayName": "MSVC Debug",
      "inherits": "msvc",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "msvc-release",
      "displayName": "MSVC Release",
      "inherits": "msvc",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "mingw-debug",
      "displayName": "MINGW Debug",
      "inherits": "mingw",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "mingw-release",
      "displayName": "MINGW Release",
      "inherits": "mingw",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "msvc-debug-build",
      "displayName": "MSVC Debug Build",
      "configurePreset": "msvc-debug",
      "configuration": "Debug"
    },
    {
      "name": "msvc-release-build",
      "displayName": "MSVC Release Build",
      "configurePreset": "msvc-release",
      "configuration": "Release"
    },
    {
      "name": "mingw-debug-build",
      "displayName": "MINGW Debug Build",
      "configurePreset": "mingw-debug",
      "configuration": "Debug"
    },
    {
      "name": "mingw-release-build",
      "displayName": "MINGW Release Build",
      "configurePreset": "mingw-release",
      "configuration": "Release"
    }
  ]
}